<resources>

    <!-- Base application theme. -->
    <style name="SimpleAuthTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/simpleauth_primary</item>
        <item name="colorPrimaryDark">@color/simpleauth_primary_dark</item>
        <item name="colorAccent">@color/simpleauth_accent</item>
    </style>

    <style name="simpleauth_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/simpleauth_secondary_text</item>
    </style>

    <style name="simpleauth_social_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/simpleauth_primary</item>
    </style>

    <style name="simpleauth_emailpassword_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/simpleauth_primary</item>
    </style>

    <style name="simpleauth_input_holder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

</resources>